<div class="py-2 flex items-center gap-2">
  <%= link_to entry.url, target: "_blank", class: "shrink-0" do %>
    <%= image_tag entry_image_url(entry), class: "w-[90px] h-[60px] object-cover rounded shadow" %>
  <% end %>
  <div>
    <%= link_to entry.url, target: "_blank" do %>
      <div class="entry-title text-md font-bold px-2 mb-1"><%= entry.title %></div>
    <% end %>
    <div class="flex gap-4 px-2">
      <div class="flex items-center gap-2">
        <%= image_tag avatar_url_for(entry.feed.user), class: "shadow rounded-full w-6 h-6" %>
        <div class="text-sm font-bold">
          <%= entry.feed.user.name %>
        </div>
      </div>
      <div class="text-slate-500 text-xs flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
        </svg>
        <%= entry.published_at.to_date %>
      </div>
    </div>
  </div>
</div>
