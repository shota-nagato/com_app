<%= turbo_frame_tag :comment do %>
  <div class="w-full py-3 px-2 mb-2 shadow rounded">
    <div class="flex items-center gap-2 mb-4">
      <div class="flex items-center gap-2">
        <%= image_tag avatar_url_for(comment.user), class: "shadow rounded-full w-6 h-6" %>
        <div class="text-xs font-bold">
          <%= comment.user.name %>
        </div>
      </div>
      <div class="text-slate-500 text-xs flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
        </svg>
        <%= comment.created_at.to_date %>
      </div>
    </div>

    <div class="prose markdown_content text-sm mb-2">
      <%= markdown(comment.content) %>
    </div>
  </div>
<% end %>
