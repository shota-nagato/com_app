<h2 class="text-lg font-bold mb-8">
  なんでも質問
</h2>

<%= form_with(model: @question, html: { class: "p-4" }) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: "h-[300px]" %>
  </div>

  <% if @question.present? %>
    <%= render "shared/error_messages", resource: @question %>
  <% end %>

  <div class="flex justify-end">
    <%= form.submit "投稿", class: "btn btn-primary mt-4" %>
  </div>
<% end %>
